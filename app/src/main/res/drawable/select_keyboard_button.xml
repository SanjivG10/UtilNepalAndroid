<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_pressed="true"
        >

        <shape android:shape="rectangle"
            >

            <stroke
                android:width="1dp"
                android:color="#000"
                >
            </stroke>

            <corners
                android:radius="20dp"
                >

            </corners>

            <solid
                android:color="#800000"
                >
            </solid>

        </shape>

    </item>


    <item
        android:state_pressed="false"
        >

        <shape android:shape="rectangle"
            >

            <stroke
                android:width="1dp"
                android:color="#000"
                >
            </stroke>

            <corners
                android:radius="20dp"
                >

            </corners>

            <solid
                android:color="#F08080"
                >
            </solid>

        </shape>

    </item>



</selector>